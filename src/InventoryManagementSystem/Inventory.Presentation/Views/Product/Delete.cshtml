@model UpdateProductModel;
@{
    var selectedCategoryName = ViewBag.SelectedCategoryName;
}
@{
    ViewData["Title"] = "Create";
}

<form asp-action="Delete" asp-controller="Product" method="post" asp-antiforgery="true">
    <br />

    <div class="container p-3">
        <h1>Update a product</h1>
        <hr />
    </div>

    <div class="row p-4 border border-2 border-dark">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Id" hidden />

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" placeholder="Enter product name" class="form-control" required disabled />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" rows="4" placeholder=" Enter product description" class="form-control" disabled></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BuyingPrice" class="control-label"></label>
            <input asp-for="BuyingPrice" placeholder="Enter product price" class="form-control" required disabled />
            <span asp-validation-for="BuyingPrice" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MinimumSellingPrice" class="control-label"></label>
            <input asp-for="MinimumSellingPrice" placeholder="Enter product price" class="form-control" required disabled />
            <span asp-validation-for="MinimumSellingPrice" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId" class="control-label"></label>
            <select asp-for="CategoryId" class="form-select" disabled>
                <option selected>@selectedCategoryName</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="QuantityInStock" class="control-label"></label>
            <input asp-for="QuantityInStock" placeholder="Enter stock" class="form-control" required disabled />
            <span asp-validation-for="QuantityInStock" class="text-danger"></span>
        </div>

        <div class="form-group d-flex justify-content-left mt-3">
            <button type="submit" class="btn btn-primary w-25">Delete</button>
            <a asp-action="Index" asp-controller="Product" class="mx-2">Back to list</a>

        </div>

    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}