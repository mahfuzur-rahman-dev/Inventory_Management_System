@model IEnumerable<Order>;

<br />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Sale orders</h1>
        </div>

        <div class="col text-end pt-1">
            <a asp-controller="Order" asp-action="CreateOrder" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> Create a order</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Product name</th>
                <th>Total quantity</th>
                <th>Total amount</th>
                <th style="width:20%;">Action</th>
            </tr>
        </thead>

        <tbody>
            @{
                foreach (var data in Model)
                {
                 
                        <tr>
                            <td>@data.Id</td>
                            <td>@data.CreatedDate.ToString("dd MMMM yyyy")</td>
                            <td>@data.Product.Name</td>
                            <td>@data.TotalQuantity</td>
                            <td>@data.TotalAmount</td>
                            <td>
                                <a asp-controller="Order" asp-action="UpdateOrder" asp-route-id="@data.Id" class="btn btn-info w-25"><i class="bi bi-pencil-square"></i></a>
                                <a asp-controller="Order" asp-action="DeleteOrder" asp-route-id="@data.Id" class="btn btn-danger w-25"><i class="bi bi-trash"></i> </a>
                            </td>
                        </tr>
                    
                }
            }
            </tbody>
        </table>
    </div>