@model UpdateOrderModel

@{
    var products = ViewBag.Products;
    var orderTypes = ViewBag.OrderTypes;
    ViewData["Title"] = "Create";
}
<div class="container  border border-2 border-dark">

    <form asp-action="UpdateOrder" asp-controller="Order" method="post" asp-antiforgery="true">
        <br />

        <div class="container p-3">
            <h1>Add a sale</h1>
            <hr />
        </div>

        <input asp-for="Id" hidden />

        <div class="row p-4 border ">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Order Type Dropdown -->
            <div class="form-group">
                <label asp-for="OrderType" class="control-label">Order Type</label>
                <select asp-for="OrderType" asp-items="orderTypes" class="form-select">
                    <option selected>---- Select order type -----</option>
                </select>
                <span asp-validation-for="OrderType" class="text-danger"></span>
            </div>

            <!-- Product Dropdown -->
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" asp-items="products" class="form-select">
                    <option selected>---- Select category -----</option>
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>

            <!-- Sale Quantity Input -->
            <div class="form-group">
                <label asp-for="SaleQuantity" class="control-label"></label>
                <input asp-for="SaleQuantity" id="saleQuantity" placeholder="Enter quantity" onchange="calculateTotal()" class="form-control" />
                <span asp-validation-for="SaleQuantity" class="text-danger"></span>
            </div>

            <!-- Unit Price Input -->
            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" id="unitPrice" placeholder="Enter unit price" onchange="calculateTotal()"  class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>

            <!-- Total Amount Input (Read-only) -->
            <div class="form-group">
                <label asp-for="TotalAmount" class="control-label"></label>
                <input asp-for="TotalAmount" id="totalAmount" placeholder="Total amount" class="form-control" readonly />
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group d-flex justify-content-left mt-3">
                <button type="submit" class="btn btn-primary w-25">Create</button>
                <a asp-action="UpdateSaleOrder" asp-controller="Order" class="mx-2">Back to list</a>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
       

        function calculateTotal() {
            var quantity = parseFloat($('#saleQuantity').val());
            var unitPrice = parseFloat($('#unitPrice').val());
            var total = @Model.TotalAmount;

            if (isNaN(unitPrice) || unitPrice === "") {
                $('#totalAmount').val('0.00');
            }
            else if (isNaN(quantity) || quantity === "") {
                $('#totalAmount').val('0.00');
            }
            else {
                total = quantity * unitPrice;
                $('#totalAmount').val(total.toFixed(2));
            }

            
        }
    </script>
}
