@model UpdateCategoryModel
@{
    ViewData["Title"] = "Delete";
}

<div class="container p-4 border border-2 border-dark">
    <form asp-action="Update" asp-controller="Category" method="post" asp-antiforgery="true">
        <br />

        <div class=" p-3">
            <h1>Update the category</h1>
            <hr />
        </div>

        <div class="row p-4 border ">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hidden field to submit the Id -->
            <input asp-for="Id" type="hidden" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group mt-2">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" rows="4" class="form-control"></textarea>
            </div>

            <div class="form-group d-flex justify-content-left mt-3">
                <button type="submit" class="btn btn-info w-25">Update</button>
                <a asp-action="Index" asp-controller="Category" class="mx-2">Back to list</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
